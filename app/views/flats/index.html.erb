<div class="container mt-3">
  <div class="row"><h1>All our flats <%= "(#{@flats.count})" %></h1></div>
  <div class="row">
    <div class="flat-card-content">
      <div class="col-4 flat-card">
      <% @flats.each do |flat| %>
        <div class="flat-card-title">
          <h4><%= "#{flat.name}" %></h4>
          <p><%= "#{flat.address}" %></p>
          <p><%= "#{flat.description}" %></p>
        </div>
        <div class="flex align-items-center">
        <i class="fa-solid fa-people-line"><%= "#{flat.number_of_guests}" %></i>
        <i class="fa-solid fa-euro-sign ms-3"><%= "#{flat.price_per_night}" %></i>
        </div>
        <div class="flat-card-actions"><%= link_to "More Infos", flat_path(flat) %></div>
      <% end %>
      </div>
    </div>

  </div>
</div>
