<div class="mb-3 p-5">
  <h1>New flat</h1>
  <%= simple_form_for [@flat] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.submit "Add a flat", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back to the flats",  flat_path(@flat) %>
</div>
